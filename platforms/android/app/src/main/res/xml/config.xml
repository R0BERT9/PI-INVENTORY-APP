        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <name>InventoryApp</name>
    <description>InventoryApp Sample</description>
    <author email="roberto.perez@gmail.com" href="https://cordova.apache.org">
        Roberto PÃ©rez
    </author>
